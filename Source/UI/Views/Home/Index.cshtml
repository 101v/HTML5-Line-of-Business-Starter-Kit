    ViewBag.Title = "Home";
}
<article class="row scroll-y" role="main">
    <h1>
        Dashboard
        <input id="DashboardDate" type="date" value="Today" />
    </h1>
    <section id="SalesHistory">
        <h2>
            Sales Volume</h2>
        <div id="MainChart">
        </div>
    </section>
    <section id="RecentActivity">
        <h2>
            Recent Activity</h2>
        <ul>
        </ul>
    </section>
    <section id="KeyPerformanceIndicators">
        <h2>
            Key Performance Indicators</h2>
        <ul>
            <li id="RecentOrders"><strong>46</strong> Orders</li>
            <li id="AverageOrderValue"><strong>$125.64</strong> Average Order Value</li>
            <li id="NewCustomerRatio"><strong>33.45%</strong> New Customer Ratio</li>
            <li id="UniqueSiteVisitors"><strong>123</strong> Unique Site Visitors</li>
        </ul>
    </section>
</article>
